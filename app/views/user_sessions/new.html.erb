<% content_for(:title, t('.title')) %>
<div class="my-28">
  <h1 class="font-bold text-lg text-center mb-10"><%= t('.title') %></h1>
  <div class="mx-auto md:max-w-4xl md:flex justify-center">
    <div class="md:w-1/2">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-4 max-w-xs mx-auto">
          <div>
            <%= f.label :email, class: "w-full" %>
          </div>
          <div>
            <%= f.text_field :email, class: "input input-bordered input-neutral w-full" %>
          </div>
        </div>
        <div class="mb-8 max-w-xs mx-auto">
          <div>
            <%= f.label :password, class: "w-full" %>
          </div>
          <div>
            <%= f.password_field :password, class: "input input-bordered input-neutral w-full" %>
          </div>
        </div>
        <div class="mb-8 text-center">
          <%= f.submit t('helpers.submit.login'), class: "btn btn-neutral" %>
        </div>
      <% end %>
      <div class="text-xs text-center">
        <%= link_to t('.to_register_page'), new_user_path %> | <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
    </div>
    <div class="hidden md:divider md:divider-horizontal">OR</div>
    <div class="md:w-1/2 md:my-auto">
      <div class="text-center">
        <%= link_to auth_at_provider_path(provider: :google), class: "btn bg-white m-4" do %>
