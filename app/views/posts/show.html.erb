<% content_for(:title, t('.title')) %>
<div class="w-5/6 mx-auto my-24 max-w-screen-xl">
  <div class="card w-full shadow-xl mb-8">
    <div class="flex justify-between">
      <div class="flex justify-start">
        <div class="avatar m-4">
          <div class="w-12 rounded-full">
            <%= image_tag @post.user.avatar_url %>
          </div>
        </div>
        <div class="my-auto">
          <%= @post.user.nickname %>
        </div>
      </div>
      <% if current_user && current_user.own?(@post) %>
      <div class="flex justify-end m-4">
        <div class="my-auto mr-3">
          <%= link_to edit_post_path(@post) do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" /></svg>
          <% end %>
        </div>
        <div class="my-auto">
          <%= link_to post_path(@post), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm', item: Post.model_name.human) } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" /></svg>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
    <figure class="px-4">
      <%= image_tag @post.post_image_url, size: '300x200', class: "rounded-xl" %>
    </figure>
    <div class="m-4">
      <p><%= simple_format(@post.content) %></p>
    </div>
    <div class="flex justify-between">
      <div class="my-auto">
        <div class="m-4">
          <%= l @post.created_at, format: :long %>
        </div>
      </div>
      <div class="flex justify-end">
        <div class="my-auto mr-3">
          <%= link_to "https://twitter.com/share?url=#{post_url(@post)}&text=【整った〜〜】%0a%0a#{@post.sauna.name}に サ飯 を投稿しました🧖‍♂️", class: "twitter-share-button", data: { hashtags: "サ飯", show_count: false } do %>
            Share
          <% end %>
          <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>
        <div class="my-auto mr-4">
          <% if current_user %>
            <%= render 'like_buttons', { post: @post } %>
          <% end %>
        </div>
      </div>
    </div>

    <%= render 'comments/form', { post: @post, comment: @comment } %>
    <%= render 'comments/comments', { comments: @comments } %>  

  </div>

</div>