<% content_for(:title, t('.title')) %>
<div class="w-5/6 mx-auto my-24 max-w-screen-xl">
	<div class="row">
		<%= render 'shared/search_form', q: @q %>
	</div>

	<!-- 掲示板一覧 --!>
	<div class="row">
		<div class="col-12">
			<div class="row">
				<% if @posts.present? %>
					<%= render @posts %>
				<% else %>
					<p>投稿がありません</p>
				<% end %>
			</div>
			<%= paginate @posts %>
		</div>
	</div>
</div>