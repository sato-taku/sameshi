<% content_for(:title, t('.title')) %>
<div class="w-5/6 mx-auto my-24 max-w-screen-xl">
	<div class="mb-10 mx-auto max-w-4xl">
		<%= render 'shared/search_form', q: @q %>
	</div>

	<!-- 掲示板一覧 --!>
	<div class="my-6 mx-auto grid grid-cols-1 md:grid-cols-3 gap-3 max-w-4xl">
		<% if @posts.present? %>
			<%= render @posts %>
		<% else %>
			<p>投稿がありません</p>
		<% end %>
	</div>
	<div class="my-8 text-center">
		<%= paginate @posts %>
	</div>
</div>
