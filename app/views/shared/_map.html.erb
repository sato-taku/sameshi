<!DOCTYPE html>
<html>
<head>
  <title>Places Search</title>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_MAPS_API_KEY"] %>&libraries=places&callback=initMap"></script>
</head>
<body>
  <button onclick="getLocation()">現在地を取得する</button>
  <div id="map" style="height: 400px; width: 100%;"></div>

  <script>
    let map; // 地図のグローバル参照を保持

    // 地図を初期化し、現在地を表示するする関数
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: { lat: -34.497, lng: 150.644 },
        zoom: 15
      });
    }
      // ユーザーの現在位置を取得
    function getLocation() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          var pos = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };

          // 地図の初期設定
          var map = new google.maps.Map(document.getElementById('map'), {
            center: pos,
            zoom: 15
          });
          // 現在地にマーカーを置く
          var marker = new google.maps.Marker({
            position: pos,
            map: map, 
            title: '現在地'
          });
          // Places Libraryを使用して周辺のご飯屋さんを検索
          function searchPlaces() {
            var service = new google.maps.places.PlacesService(map);
            service.nearbySearch({
              location: pos,
              radius: 1000, // 1000メートル以内
              keyword: 'sauna' // サウナを検索
            }, function(results, status) {
              if (status === google.maps.places.PlacesServiceStatus.OK) {
                for (var i = 0; i < results.length; i++) {
                  createMarker(results[i], map);
                }
              }
            });
          }

          // 地図の中心が変更された時に周辺の施設を再検索
          map.addListener('center_changed', function() {
            searchPlaces();
          });

          // 最初に施設を検索
          searchPlaces();

        }, function() {
          handleLocationError(true, map.getCenter());
        });
      } else {
        // ブラウザがGeolocationをサポートしていない場合
        handleLocationError(false, map.getCenter());
      }
    }

    // 検索結果の場所にマーカーを設置する関数
    function createMarker(place, map) {
      new google.maps.Marker({
        position: place.geometry.location,
        map: map,
        title: place.name
      });
    }
    // 位置情報取得に失敗した場合の処理
    function handleLocationError(browserHasGeolocation, pos) {
      console.log(browserHasGeolocation ?
                  'Error: The Geolocation service failed.':
                  'Error: Your browser doesn\'t support geolocation,');
    }
  </script>
<body>
    <div id="map" style="height: 400px; width: 100%;"></div>
</body>
</html>
