<%= search_form_for q, url: posts_path do |f| %>
  <div class="input-group mb-3">
    <%= f.search_field :content_cont, placeholder: "フリーワード" %>
    <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, { include_blank: "都道府県" } %>
    <%= f.select :meal_genre_eq, Post.meal_genres, { include_blank: "サ飯ジャンル" } %>
    <%= f.search_field :sauna_name_cont, placeholder: "サウナ施設" %>
    <div>
      <%= f.submit %>
    </div>
  </div>
<% end %>