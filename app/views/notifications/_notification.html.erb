<%= turbo_frame_tag dom_id(notification) do %>
<div data-notification-id="<%= notification.id %>" class="<%= notification.unread ? 'unread' : '' %> dropdown-item">
  <div class="flex w-full mt-1">
    <%= link_to notification_path(notification), method: :patch, data: { turbo_method: :patch }, class: "btn btn-sm btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6"><path fill-rule="evenodd" d="M19.916 4.626a.75.75 0 0 1 .208 1.04l-9 13.5a.75.75 0 0 1-1.154.114l-6-6a.75.75 0 0 1 1.06-1.06l5.353 5.353 8.493-12.74a.75.75 0 0 1 1.04-.207Z" clip-rule="evenodd" /></svg>
    <% end %>
    <div>
      <%= generate_notification_message(notification) %>
    </div>
  </div>
  <span class="notification-time"><%= time_ago_in_words(notification.created_at) %></span>
</div>
<% end %>
