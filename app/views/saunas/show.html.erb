<% content_for(:title, @sauna.name) %>
<div class="w-5/6 mx-auto my-28 max-w-4xl">
  <h1 class="font-bold text-3xl mb-10"><%= @sauna.name %></h1>

  <div class="my-6 mx-auto grid grid-cols-1 md:grid-cols-3 gap-3 max-w-4xl">
    <% if @posts.present? %>
      <%= render @posts %>
    <% else %>
      <div>
        <p>まだサ飯の投稿がないよ！</p>
      </div>
    <% end %>
  </div>
  <div>
    <%= paginate @posts %>
  </div>
</div>