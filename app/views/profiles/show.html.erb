<%= content_for(:title, t('.title')) %>
<div class="w-5/6 mx-auto my-24 max-w-screen-xl">
    <h1 class="font-bold text-lg text-center mb-10"><%= current_user.nickname %>さんの<%= t('.title') %></h1>
    <div class="flex justify-evenly mb-4 mx-auto p-6">
      <div class="avatar">
        <div class="w-36 rounded-full">
        <% if @user.avatar.present? %>
          <%= image_tag @user.avatar_url %>
        <% end %>
        </div>
      </div>
      <div class="w-28">
        <div class="font-bold text-3xl mb-4">
          <%= @user.nickname %>
        </div>
        <div class="flex justify-between mb-4">
          <div>
            <%= @user.prefecture.name %>
          </div>
          <div>
            <%= @user.age_group %>
          </div>
        </div>
        <div>
          <p>投稿数：<%= @my_posts.count %>件</p>
        </div>
      </div>
    </div>
    <div>
      <%= link_to "いいね一覧", likes_posts_path, class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "編集", edit_profile_path, class: "btn btn-primary" %>
    </div>
    <div>
      <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "btn btn-primary" %>
    </div>
    <div>
      <p><%= @user.nickname %>さんの投稿：<%= @my_posts.count %>件</p>
    </div>
    <div>
    <% if @my_posts.present? %>
      <%= render @my_posts %>
    <% else %>
      <p>投稿がありません</p>
    <% end %>
    </div>
  <%= paginate @my_posts %>
  </div>
</div>
