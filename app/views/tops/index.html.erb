<div class="mx-auto mt-16 md:mt-6">
  <div>
    <%= image_tag 'sameshi_top.svg', class: "w-fit" %>
  </div>
</div>
<div class="w-5/6 mb-24 mx-auto max-w-4xl">

  <div class="card p-4 my-4 mx-auto w-full shadow-xl">

    <div class="carousel carousel-end rounded-box">
      <div class="carousel-item w-full md:w-1/2">
        <%= image_tag "slide_1.svg" %>
      </div> 
      <div class="carousel-item w-full md:w-1/2">
        <%= image_tag "slide_2.svg" %>
      </div>
      <div class="carousel-item w-full md:w-1/2">
        <%= image_tag "slide_3.svg" %>
      </div>
      <div class="carousel-item w-full md:w-1/2">
        <%= image_tag "slide_4.svg" %>
      </div>
    </div>

    <div class="text-center md:flex justify-evenly">
      <div class="mt-4">
        <%= link_to saunas_path, data: { turbo: false }, class: "btn btn-neutral" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>
          現在地から探す
        <% end %>
      </div>
      <div class="mt-4">
        <%= link_to posts_path, class: "btn btn-neutral" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z" /></svg>
          投稿一覧を見る
        <% end %>
      </div>
    </div>

  </div>

</div>